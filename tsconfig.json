{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "esnext"
        ],
        "outDir": "./dist",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "sourceMap": true
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}